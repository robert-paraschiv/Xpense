<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Xpense" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/system_accent1_500</item>
        <item name="colorPrimaryVariant">@android:color/system_accent2_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/system_accent3_500</item>
        <item name="colorSecondaryVariant">@android:color/system_accent3_600</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorPrimaryContainer">@android:color/system_accent1_300</item>
        <item name="colorOnPrimaryContainer">@android:color/system_accent1_10</item>

        <item name="colorSurface">@android:color/system_neutral2_50</item>

        <!-- change navigation bar color -->
        <item name="android:navigationBarColor">
            @color/fragments_background
        </item>

        <!-- change status bar color -->
        <item name="android:statusBarColor">
            @color/fragments_background
        </item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="DialogTheme" parent="MaterialAlertDialog.Material3">
        <!--selected day-->
        <item name="android:colorControlActivated">@android:color/system_accent1_200</item>
        <!--days of the month-->
        <item name="android:textColorPrimary">@android:color/system_accent1_500</item>
        <!--days of the week-->
        <item name="android:textColorSecondary">@android:color/system_neutral2_500</item>
    </style>
</resources>